
<div class="media">
  <div class="media-body">
    <h4 class="media-heading">

    <small>
      <%= comment.user.name %> commented <%= time_ago_in_words(comment.created_at) %> ago
      <% if can? :destroy, comment %>
        | <%= link_to "Delete", [@topic, @post, comment], method: :delete %>
      <% end %>
    </small>

      
      <%= comment.body %>
    </h4>
  </div>
</div>

